<h1>Users</h1>
<table>
<thead>
  <tr>
    <th>Nome</th>
    <th>Rua</th>
    <th>Bairro</th>
    <th>Número</th>
    <th>Complemento</th>
    <th colspan="3">Ações</th>
  </tr>
</thead>
<tbody>
    <% @users.each do |user|%>
        <tr>
            <td><%= user.nome %></td>
            <td><%= user.rua %></td>
            <td><%= user.bairro %></td>
            <td><%= user.numero %></td>
            <td><%= user.complemento %></td>
            <td><%= link_to "Visualizar", user %></td>
            <td><%= link_to "Editar", edit_user_path(user) %></td>
            <td><%= link_to "Apagar", user, method: :delete,  data: {confirm: "Tem certeza que deseja excluir esse usuário?"}%></td>
            <td></td>
        </tr>
    <% end%>
</tbody>
</table>
<%= link_to "Criar", new_user_path %>
<%= link_to "Voltar", root_path %>