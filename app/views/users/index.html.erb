<h1>Users</h1>

<table class="table table-striped table-bordered table-hover ">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Rua</th>
      <th scope="col">Número</th>
      <th scope="col">Bairro</th>
      <th scope="col">Cidade</th>
      <th scope="col">Estado</th>
      <th scope="col" colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.nome %></td>
            <td><%= user.rua %></td>
            <td><%= user.numero %></td>
            <td><%= user.bairro %></td>
            <td><%= user.cidade %></td>
            <td><%= user.estado.upcase %></td>
            <td><%= link_to "Visualizar", user %></td>
            <td><%= link_to "Editar", edit_user_path(user) %></td>
            <td><%= link_to "Apagar", user, method: :delete,  data: {confirm: "Tem certeza que deseja excluir esse usuário?"}%></td>
        </tr>
    <% end%>
  </tbody>
</table>

<%= link_to "Criar", new_user_path, class: "btn btn-primary" %>
<%= link_to "Voltar", root_path, class: "btn btn-secondary" %>